<%= simple_form_for([event, event_registration], html: { class: "flex space-x-4 items-end" }) do |f| %>
  <% if event_registration.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(event_registration.errors.count, "error") %> prohibited this registration from being saved:</h2>
      <ul>
        <% event_registration.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.simple_fields_for :attendee do |attendee_form| %>
    <div class="flex-1">
      <%= attendee_form.input :name, label: 'Attendee Name', input_html: { class: 'shadow rounded-md border border-gray-400 outline-none px-3 py-2 w-full' } %>
    </div>

    <div class="flex-1">
      <%= attendee_form.input :email, label: 'Attendee Email', input_html: { class: 'shadow rounded-md border border-gray-400 outline-none px-3 py-2 w-full' } %>
    </div>
  <% end %>

  <div>
    <%= f.submit "Save", class: "rounded-lg py-2 px-5 bg-blue-600 text-white font-medium cursor-pointer" %>
  </div>
<% end %>
